---
// Component Imports
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav/index.jsx";
import Footer from "../components/Footer/index.jsx";
import { tech, projects } from "../const";

// Data Fetching: List all Markdown posts in the repo.

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="fr">
  <head>
    <MainHead />
    <style lang="scss">
      .flyingCube {
        position: sticky;
        width: 200px;
        height: 200px;
        background: linear-gradient(
            134deg,
            rgb(106, 152, 240) 0%,
            rgb(73, 97, 220) 99%
          )
          0% 0% repeat scroll;
        transform: rotate(45deg);
        top: 0px;
        z-index: -1;
        &.right {
          transform: rotate(75deg);
          right: 150px;
          top: 150px;
        }
        &.middle {
          transform: rotate(120deg);
          right: 50%;
          top: 41%;
        }
      }
      .relative {
        position: relative;
      }
      .header {
        min-height: 70vh;
        display: flex;
        justify-content: flex-start;
        max-width: 800px;
        width: 100%;
        margin: auto;
        position: relative;
        &__wrapper {
          animation: 0.4s ease 0s 1 normal none running bqBqVs;
          display: flex;
          align-items: flex-start;
          justify-content: center;
          flex-direction: column;
        }
        &__title {
          font-size: 3rem;
          font-weight: bold;
        }
        &__subtitle {
          font-size: 2rem;
          color: rgb(178, 189, 205);
          overflow-wrap: break-word;
        }
        &__socialWrapper {
          margin-top: 25px;
          display: flex;
          flex-wrap: wrap;
          gap: 25px;
          font-size: 1.5rem;
        }
        &__social,
        &__social > * {
          width: 30px;
          height: 30px;
          fill: rgb(85, 117, 231);
          cursor: pointer;
          &:hover {
            fill: white;
          }
        }
      }
      .main {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        &-area {
          display: flex;
          justify-content: flex-start;
          align-items: flex-start;
          flex-direction: column;
          max-width: 800px;
          width: 100%;
          min-height: 70vh;
          margin: auto;
          padding: 4rem 0px;
        }
        &__bar {
          width: 12rem;
          height: 5px;
          background: linear-gradient(
              134deg,
              rgb(106, 152, 240) 0%,
              rgb(73, 97, 220) 99%
            )
            0% 0% repeat scroll;
          margin-bottom: 15px;
        }
        &__experienceContainer {
          display: flex;
          width: 100%;
          margin-top: 50px;
        }
        &__experienceWrapper {
          display: grid;
          width: 100%;
          grid-gap: 20px;
          grid-template-columns: repeat(3, 1fr);
        }
        &__experience {
          display: flex;
          justify-content: flex-start;
          background-color: var(--secondary);
          padding: 10px;
          border-radius: 10px;
          align-items: center;
          gap: 10px;
          z-index: 1;
          &:hover,
          &:focus {
            transform: rotate(3deg);
          }

          &Image {
            width: 25px;
            height: 25px;
          }
          &Separator {
            height: 100%;
            width: 10%;
          }
        }
        &__project {
          &Container {
            margin-top: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            width: 100%;
            row-gap: 15px;
          }
          &Wrapper {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            width: 100%;
          }
        }
      }
      .secondary {
        background-color: var(--secondary);
      }
      .absolute {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: space-around;
        z-index: -1;
      }
      .infinitecolor {
        font-size: 1.5rem;
        background: linear-gradient(
          90deg,
          rgba(245, 12, 12, 1) 0%,
          rgba(121, 9, 60, 1) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 200% auto;
        background-clip: text;
        animation: animate 2s linear infinite;
      }
      @keyframes animate {
        to {
          background-position: 200% center;
        }
      }
    </style>
  </head>
  <body>
    <Nav />
    <div class="absolute">
      <div class="flyingCube"></div>
      <div class="flyingCube middle"></div>
      <div class="flyingCube right"></div>
    </div>
    <header class="header">
      <div class="header__wrapper">
        <h1 class="header__title">Salut, c'est Mathieu Daniere</h1>
        <h2 class="header__subtitle">Developpeur fullstack</h2>
        <div class="header__socialWrapper">
          <a
            class="header__social"
            href="https://github.com/Daniere-Mathieu"
            target="_blank"
          >
            <svg
              width="20px"
              height="20px"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
