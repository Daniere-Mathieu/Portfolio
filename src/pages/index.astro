---
// Component Imports
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav/index.jsx";
import Footer from "../components/Footer/index.jsx";
import {
  GithubSvg,
  MailSvg,
  WebsiteSvg,
} from "../components/LinkSvg/index.jsx";
import { Header } from "../components/Header/index.jsx";
import { tech, projects } from "../const";
---

<html lang="fr">
  <head>
    <MainHead />
    <style lang="scss">
      .flyingCube {
        position: sticky;
        width: 200px;
        height: 200px;
        background: linear-gradient(
            134deg,
            rgb(106, 152, 240) 0%,
            rgb(73, 97, 220) 99%
          )
          0% 0% repeat scroll;
        transform: rotate(45deg);
        top: 0px;
        z-index: -1;
        &.right {
          transform: rotate(75deg);
          right: 150px;
          top: 150px;
        }
        &.middle {
          transform: rotate(120deg);
          right: 50%;
          top: 41%;
        }
      }
      .main {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        &-area {
          display: flex;
          justify-content: flex-start;
          align-items: flex-start;
          flex-direction: column;
          max-width: 800px;
          width: 100%;
          min-height: 70vh;
          margin: auto;
          padding: 4rem 0px;
        }
        &__bar {
          width: 12rem;
          height: 5px;
          background: linear-gradient(
              134deg,
              rgb(106, 152, 240) 0%,
              rgb(73, 97, 220) 99%
            )
            0% 0% repeat scroll;
          margin-bottom: 15px;
        }
        &__experienceContainer {
          display: flex;
          width: 100%;
          margin-top: 50px;
        }
        &__experienceWrapper {
          display: grid;
          width: 100%;
          grid-gap: 20px;
          grid-template-columns: repeat(3, 1fr);
        }
        &__experience {
          display: flex;
          justify-content: flex-start;
          background-color: var(--secondary);
          padding: 10px;
          border-radius: 10px;
          align-items: center;
          gap: 10px;
          z-index: 1;
          &:hover,
          &:focus {
            transform: rotate(3deg);
          }

          &Image {
            width: 25px;
            height: 25px;
          }
          &Separator {
            height: 100%;
            width: 10%;
          }
        }
        &__project {
          &Container {
            margin-top: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            /* flex-direction: column; */
            width: 100%;
            gap: 15px;
            flex-wrap: wrap;
          }
          &Title {
            font-size: 3rem;
          }
          &Image {
            height: 200px;
          }
          &Wrapper {
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            width: 90%;
            box-shadow: -1px 5px 5px black;
            border-radius: 10px;
            padding: 10px;
            gap: 15px;
          }
          &DataContainer {
            display: flex;
            gap: 15px;
            align-items: center;
          }
          &RessourceContainer {
            display: flex;
            gap: 25px;
          }
        }
      }
      .infinitecolor {
        font-size: 1.5rem;
        background: linear-gradient(
          90deg,
          rgba(2, 0, 36, 1) 0%,
          rgba(9, 9, 121, 1) 35%,
          rgba(0, 212, 255, 1) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 200% auto;
        background-clip: text;
        animation: animate 2s linear infinite;
      }
      @keyframes animate {
        to {
          background-position: 200% center;
        }
      }
      @media screen and (max-width: 850px) {
        .right {
          display: none;
        }
      }
      @media screen and (max-width: 700px) {
        .middle {
          display: none;
        }
        .main__experienceWrapper {
          grid-template-columns: repeat(2, 1fr);
        }
      }
    </style>
  </head>
  <body>
    <Nav />
    <div class="absolute">
      <div class="flyingCube"></div>
      <div class="flyingCube middle"></div>
      <div class="flyingCube right"></div>
    </div>
    <Header />
    <main class="main">
      <div class="secondary">
        <div class="main-area secondary" id="about">
          <div class="main__bar"></div>
          <h2>A propos</h2>
          <p>
            Bonjour je m'apelle <span class="infinitecolor"
              >Mathieu Daniere</span
            > j'ai 20 ans ,Je suis actuellement en formation de Developpeur Fullstack.
            <br />je travaille actuellement pour Le pronto en tant qu'alternant.<br
            />
            I use Arch btw
          </p>
        </div>
      </div>

      <div class="main-area" id="experience">
        <div class="main__bar"></div>
        <h2>Experiences</h2>
        <div class="main__experienceContainer">
          <ul class="main__experienceWrapper">
            {
              tech.map((item) => (
                <li class="main__experience">
                  <div>
                    <img
                      class="main__experienceImage"
                      src={item.path}
                      alt={item.name}
                    />
                  </div>
                  <div>
                    <h4>{item.name}</h4>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <!-- make card in line for project -->
      <div class="secondary">
        <div class="main-area secondary" id="projects">
          <div class="main__bar"></div>
          <h2>Projets</h2>
          <ul class="main__projectContainer">
            {
              projects.map((project) => (
                <li class="main__projectWrapper">
                  <div class="flex  fullSize column">
                    <div class="main__projectImageWrapper">
                      <img
                        class="main__projectImage"
                        src={project.path}
                        alt={project.alt ? project.alt : null}
                      />
                    </div>
                  </div>
                  <div>
                    <div class="main__projectDataContainer">
                      <h3 class="main__projectTitle">{project.name}</h3>
                      <div class="main__projectRessourceContainer">
                        {project.link ? (
                          <WebsiteSvg link={project.link} />
                        ) : null}
                        {project.githubLink ? <GithubSvg /> : null}
                      </div>
                    </div>
                    <p>{project.description ? project.description : null}</p>
                  </div>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
